<!DOCTYPE HTML>
<html>
<head>
    <title>Personal Ads</title>
    <html lang="en">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!--[if lte IE 8]><script src="Content/js/ie/html5shiv.js"></script><![endif]-->
    <link rel="stylesheet" href="@Url.Content("~/Content/")css/main.css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/")sass/main.css" />
    <!--[if lte IE 8]><link rel="stylesheet" href="Content/css/ie8.css" /><![endif]-->
    <!--[if lte IE 9]><link rel="stylesheet" href="Content/css/ie9.css" /><![endif]-->
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/sass")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="left-sidebar">
    <div id="page-wrapper">

        <!-- Header -->
        <div id="header-wrapper">
            <div id="header" class="container">

                <!-- Logo -->
                <h1 id="logo"><a href="/Home">Personal Ads</a></h1>

                <div class="navbar-collapse collapse">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>

        <!-- Main -->
        <div class="wrapper">
            <div class="container" id="main">
                <div class="row 150%">
                    <div class="2u 12u(narrower)">

                        <!-- Sidebar -->
                        <section id="sidebar">
                            <section>
                                <header>
                                    <h4>Filter Ads by:</h4>
                                </header>

                                @using(Html.BeginForm("Index", "Home",FormMethod.Post))
                                {
                                    <input id="search" type="text" class="form-control" name="search"/>
                                    <br/>
                                    <input type="submit" value="Search" class="btn btn-primay"/>
                                    @*@Html.DropDownListFor(model => model.Categories, new SelectList(ViewBag.Categories), new {onchange = "this.form.submit;" })
                                    @Html.EnumDropDownListFor(model => model.City, htmlAttributes: new { @class = "form-control" })
                                    @Html.EnumDropDownListFor(model => model.Condition, htmlAttributes: new { @class = "form-control" })*@
                                }
                                
                            </section>
                        </section>
                    </div>
                    <div class="10u 12u(narrower) important(narrower)">
                        @RenderBody()
                        <!-- Content -->

                    </div>
                </div>
                <br/>
                <br/>
                <br/>
        <div id="footer-wrapper">
            <div id="footer" class="container">
                <div class="row">
                    <section class="6u 12u(narrower)">
                        <form method="post" action="#">
                            <div class="row 50%">
                                <div class="6u 12u(mobile)">
                                    <input name="name" placeholder="Name" type="text" />
                                </div>
                                <div class="6u 12u(mobile)">
                                    <input name="email" placeholder="Email" type="text" />
                                </div>
                            </div>
                            <div class="row 50%">
                                <div class="12u">
                                    <textarea name="message" placeholder="Message"></textarea>
                                </div>
                            </div>
                            <div class="row 50%">
                                <div class="12u">
                                    <ul class="actions">
                                        <li><input type="submit" value="Send Message" /></li>
                                        <li><input type="reset" value="Clear form" /></li>
                                    </ul>
                                </div>
                            </div>
                        </form>
                    </section>
                    <section class="6u 12u(narrower)">
                        <div class="row 0%">
                            <ul class="divided icons 6u 12u(mobile)">
                                <li class="icon fa-twitter"><a href="#"><span class="extra">twitter.com/</span>PersonalAds</a></li>
                                <li class="icon fa-facebook"><a href="#"><span class="extra">facebook.com/</span>PersonalAds</a></li>
                                <li class="icon fa-dribbble"><a href="#"><span class="extra">dribbble.com/</span>PersonalAds</a></li>
                            </ul>
                            <ul class="divided icons 6u 12u(mobile)">
                                <li class="icon fa-instagram"><a href="#"><span class="extra">instagram.com/</span>PersonalAds</a></li>
                                <li class="icon fa-youtube"><a href="#"><span class="extra">youtube.com/</span>PersonalAds</a></li>
                                <li class="icon fa-pinterest"><a href="#"><span class="extra">pinterest.com/</span>PersonalAds</a></li>
                            </ul>
                        </div>
                    </section>
                </div>
           </div>
            <div id="copyright" class="container">
                <ul class="menu">
                    <li>&copy; Untitled. All rights reserved.</li>
                    <li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
                </ul>
            </div>
        </div>

    </div>

<!-- Scripts -->
    


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")


    <script src="@Url.Content("~/Content/")/js/jquery.min.js"></script>
    <script src="@Url.Content("~/Content/")/js/jquery.dropotron.min.js"></script>
    <script src="@Url.Content("~/Content/")/js/skel.min.js"></script>
    <script src="@Url.Content("~/Content/")/js/util.js"></script>
    <!--[if lte IE 8]><script src="Content/js/ie/respond.min.js"></script><![endif]-->
    <script src="@Url.Content("~/Content/")/js/main.js"></script>
    @RenderSection("scripts", required: false)
    
</body>
</html>